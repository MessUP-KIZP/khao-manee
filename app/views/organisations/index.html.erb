<p id="notice"><%= notice %></p>

<div class="dig-organisations-content">
  <div class="dig-list-header">
  </div>

  <div class="dig-resource-list">
    <% @organisations.each do |organisation| %>
      <div class="dig-resource-item">
        <div class="dig-resource-item-content">
          <div class="dig-resource-item-picture">
            <% if organisation.avatar? %>
              <%= image_tag(organisation.avatar_url) %>
            <% else %>
              <%= image_tag('blank_profile_organisation.svg') %>
            <% end %>
          </div>
          <div class="resource-item-name">
            <h2><%= organisation.name %></h2>
          </div>
          <div class="dig-resource-item-description">
            <%= organisation.description %>
          </div>
        </div>
        <div class="dig-resource-item-footer">
          <%= button_to("Wywietl profil", organisation_path(organisation)) %>
        </div>
      </div>
    <% end %>
  </div>
</div>