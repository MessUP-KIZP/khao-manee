<p id="notice"><%= notice %></p>


<div class="dig-list-header">
</div>

<div class="dig-organisations-list">
  <% @organisations.each do |organisation| %>
    <div class="dig-organisation-item">
      <div class="dig-organisation-item-content">
        <div class="dig-organisation-item-picture">
          <% if organisation.avatar? %>
            <%= image_tag(organisation.avatar_url) %>
          <% else %>
            <%= image_tag('blank_profile_organisation.svg') %>
          <% end %>
        </div>
        <div class="organisation-item-name">
          <h2><%= organisation.name %></h2>
        </div>
        <div class="dig-organisation-item-description">
          <%= organisation.description %>
        </div>
      </div>
      <div class="dig-organisation-item-footer">
        <%= button_to("Wywietl profil", organisation_path(organisation)) %>
      </div>
    </div>
  <% end %>
</div>
