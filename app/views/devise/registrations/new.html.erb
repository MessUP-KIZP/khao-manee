<div class="background-image blurred"><%= image_tag("main_1.png")%></div>
<div class="login-page">
<h2>Zarejestruj</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "E-mail" %>
  </div>

  <div class="field">
    <%= f.label :password, "Hasło" %>
    <% if @minimum_password_length %>
    <em>(minimum <%= @minimum_password_length %> znaków)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Potwierdź hasło" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Zarejestruj" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>